<h2> Existing photos </h2>

<% if @listing.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

  <ul>
  <% @listing.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
</div>
<% end %>

<!-- this block is for photos! -->
<% if @product_photos.size != 0  %>
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @product_photos.each do |photo| %>
        <td><%= image_tag  photo.picture.url, :size => '150'%></td>
        <td><%= photo.description %></td>
        <!-- <td><%= link_to 'Show', photo %></td> -->
        <td><%= link_to 'Edit', edit_product_photo_path(photo, :listing => photo.listing_id) %></td>
        <end>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p> We don't have any photos for this listing yet @_@! </p>
<% end %>

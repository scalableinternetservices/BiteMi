<!DOCTYPE html>
<% cache(cache_key_for_each_listing(@listing)) do %>

<head>
    <style>
    .thumbnail img {
        width: 100%;
    }

    .ratings {
        padding-right: 10px;
        padding-left: 10px;
        color: #d17581;
    }

    .thumbnail {
        padding: 0;
    }

    .thumbnail .caption-full {
        padding: 9px;
        color: #333;
    }

    footer {
        margin: 50px 0;
    }
    </style>
</head>

<body>
    <!-- Page Content -->
    <div class="container">
        <div class = "row">
            <div class="col-md-12">
                <div class="thumbnail">
                    <img class="img-responsive" src="/images/slide1.jpg" alt="">
                    <div class="caption-full">
                        <h4 class="pull-right">$<%= @listing.price %></h4>
                        <h4><%= @listing.brand %></h4>
                        <h5><%= @listing.model %></h5>
                        <p>
                          <strong>Start time:</strong>
                          <%= @listing.start_time %>
                          <strong>End time:</strong>
                          <%= @listing.end_time %>
                        </p>
                        <p>
                          <strong>Condition:</strong>
                          <%= @listing.condition %>
                        </p>

                        <p>
                          <strong>Tags:</strong>
                          <%= @listing.tag_list.join(', ') %>
                        </p>
                        <p>
                          <strong>Description:</strong>
                        </p>
                        <p>
                            <%= @listing.description %>
                        </p>
                    </div>
                </div>
                <%= render template: 'comments/index' %> <br>
            </div>
        </div>
    </div>
    <!-- /.container -->

    <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; GadgetBite</p>
                </div>
            </div>
        </footer>
    </div>

</body>
<% end %> <!-- cache -->

</html>

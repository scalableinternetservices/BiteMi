<div class="container">
<div class="row">
<div >
<p id="notice"><%= notice %></p>

<h1>Order request</h1>

<script>
  function update_status_div(status) {  
    //console.log("wow");
  jQuery.ajax({
    url: "index_with_status",
    type: "GET",
    data: {"status" : status},
    dataType: "html",
    success: function(data) {
      //console.log("aha");
      jQuery("#ordersDiv").html(data);
    }
  });
}
</script>

<%= select_tag 'status', options_for_select(["All", "Accepted", "Denied", "Processing"], "All"), 
:onchange => "update_status_div(this.value)" %>

<div id="ordersDiv">
  <table class="orders">
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
      <th>Price</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.start_time %></td>
        <td><%= order.end_time %></td>
        <td><%= order.status %></td>
        <td><%= order.price %></td>
        <td><%= link_to 'Show', order %></td>

        <% if order.status == "Processing" %>
        <td><%= link_to 'Accept', orders_accept_path(:order_id => order.id), data: { confirm: 'Accept this order?' } %></td>
        <td><%= link_to 'Deny', orders_deny_path(:order_id => order.id), data: { confirm: 'Deny this order?' } %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Order', new_order_path %>
</div>
</div>
</div>
<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-11-28-61.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <!-- User goes to Home page -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- User sign up -->
      <request>
        <http url='/users/signup' version='1.1' method='GET'></http>
      </request>

      <setdynvars sourcetype="random_number" start="1" end="9999999">
        <var name="random_user_number" />
      </setdynvars>

      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='
          user%5Bemail%5D=user%%_random_user_number%%@gmail.com&amp;
          user%5Bpassword%5D=11111111&amp;
          user%5Bpassword_confirmation%5D=11111111&amp;
          user%5Baddress%5D=blahblah&amp;
          commit=Sign+up'>
        </http>
      </request>


      <!-- User adds listing -->
      <request>
        <http url='/listings/new' version='1.1' method='GET'></http>
      </request>

      <setdynvars sourcetype="random_number" start="1" end="99999">
        <var name="random_model_name" />
      </setdynvars>

      <request subst="true">
        <http
          url='/listings'
          version='1.1'
          method='POST'
          contents='
          listing%5Bbrand%5D=Apple&amp;
          listing%5Bmodel%5D=V%%_random_model_name%%&amp;
          listing%5Bprice%5D=2.0&amp;
          listing%5Bcondition%5D=Good&amp;
          listing%5Bstart_time%5D=2015-11-5&amp;
          listing%5Bend_time%5D=2015-12-25&amp;
          commit=Create+Listing'>
        </http>
      </request>


      

       <!-- Uncomment the following to debug print your dynamic variables  -->
      
      <setdynvars sourcetype="eval" code="fun( {Pid, DynVars} ) ->
        io:format([126, $p, 126, $n, 126, $n], [DynVars]),
        ok end.">
        <var name="dump" />
      </setdynvars>

      

    </session>
  </sessions>
</tsung>